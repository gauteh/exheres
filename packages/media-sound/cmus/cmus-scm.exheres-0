require cmus

DOWNLOADS=""

SCM_REPOSITORY="git://repo.or.cz/cmus.git"
require scm-git

PLATFORMS="~x86"

MYOPTIONS="audioscrobbler [[ description = [ Apply Audioscrobbler/Last.fm patch from http://www.hci-matters.com/blog/2008/05/06/c-music-player-audioscrobblerlastfm-patch/ ] ]]"

src_prepare () {
    default

    if optionq "audioscrobbler"; then
        cd ${WORK}
        patch < ${FILES}/cmus_audioscrobbler.patch || die "Could not patch!"
    fi
}
    
